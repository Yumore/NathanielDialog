<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48.0dp"
              android:background="@drawable/shape_bottom_button_layout"
              android:divider="@drawable/shape_linear_layout_horizontal_split"
              android:orientation="horizontal"
              android:showDividers="middle">

    <TextView
        android:id="@+id/dialog_negative_btn"
        style="@style/dialogTextNormal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_dialog_button_negative"
        tools:text="取消"/>

    <TextView
        android:id="@+id/dialog_positive_btn"
        style="@style/dialogTextSpecial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_dialog_button_positive"
        tools:text="确定"/>

</LinearLayout>